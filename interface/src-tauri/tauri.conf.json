{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "blackline",
  "version": "0.1.0",
  "identifier": "com.blackline.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [                   
      {
        "title": "Blackline",
        "width": 980,
        "height": 680,
        "resizable": false,
        "decorations": false,
        "maximizable": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
